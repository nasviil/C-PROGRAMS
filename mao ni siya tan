#include <stdio.h>
#include <math.h>

int octalToDecimal(int number)
{
    int decimalNumber = 0, i = 1, temp;

    while (number != 0)
    {
        temp = number % 10;
        decimalNumber = decimalNumber + (temp * i);
        i = i * 8;
        number = number / 10;
    }

    return decimalNumber;
}

int decimalToOctal(int number)
{
    int octalNumber = 0, i = 1;

    while (number != 0)
    {
        octalNumber += (number % 8) * i;
        number /= 8;
        i *= 10;
    }

    return octalNumber;
}

int main()
{

    int number;
    char ns;

    printf("Enter the number you want to convert and the number system (d for decimal, o for octal): ");
    scanf("%d", &number);
    scanf("%c", &ns);

    if (ns == 'd')
    {
        printf("%d in decimal = %d in octal", number, decimalToOctal(number));
    }
    else if (ns == 'o')
    {
        printf("%d in octal = %lld in decimal", number, octalToDecimal(number));
    }
    else
    {
        printf("INVALID NUMBER USE O OR D TO INDICATE THE NUMBER SYSTEM");
    }

    return 0;
}
