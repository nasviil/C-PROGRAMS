#include <stdio.h>
#include <math.h>

long long convertOctalToDecimal(int number)
{
    int decimalNumber = 0, i = 0;

    while (number != 0)
    {
        decimalNumber += (number % 10) * pow(8, i);
        ++i;
        number /= 10;
    }

    i = 1;

    return decimalNumber;
}
int convertDecimalToOctal(int number)
{
    int octalNumber = 0, i = 1;

    while (number != 0)
    {
        octalNumber += (number % 8) * i;
        number /= 8;
        i *= 10;
    }

    return octalNumber;
}

int main()
{

    int number;
    char ns;

    printf("Enter the number you want to convert and the number system (d for decimal, o for octal): ");
    scanf("%d", &number);
    scanf("%c", &ns);

    if (ns == 'd')
    {
        printf("%d in decimal = %d in octal", number, convertDecimalToOctal(number));
    }
    else if (ns == 'o')
    {
        printf("%d in octal = %lld in decimal", number, convertOctalToDecimal(number));
    }
    else
    {
        printf("INVALID NUMBER USE O OR D TO INDICATE THE NUMBER SYSTEM");
    }

    return 0;
}
